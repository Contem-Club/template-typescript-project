{
  "name": "typescript-template",
  "version": "1.0.0",
  "author": {
    "name": "Simon Scheurer",
    "email": "simon@teklens.ch",
    "url": "https://teklens.ch"
  },
  "description": "Typescript template with linting, formatting, testing, and vscode settings",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "pnpm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "check": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "lint:fix": "pnpm run check && pnpm run fix",
    "lint:prettier": "prettier --write \"src/**/*.ts\"",
    "format": "pnpm run lint:fix && pnpm run lint:prettier",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint"
      ]
    }
  }
}
